                        android:id="@+id/GallonBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="US Gallon"
                        android:textSize="6sp"
                        android:textStyle="bold" />
                </RadioGroup>

