                        android:id="@+id/LitreBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="Litre"
                        android:textSize="6sp"
                        android:checked="true"
                        android:textStyle="bold" />

