<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:background="@drawable/gradient1"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.A1Activity"
    android:orientation="vertical"

    tools:showIn="@layout/app_bar_a1"
    >

    <LinearLayout
        android:layout_marginBottom="100dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/InstructionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:text="Click on the '+' sign on Top Right to add a new tank."/>

    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/banner_gradient"
        android:id="@+id/DevMsgLayout"
        android:weightSum="15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:padding="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:layout_weight="14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/showDevMessage"/>
        <ImageView
            android:padding="2dp"
            android:layout_gravity="top"
            android:id="@+id/closeDevMessage"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cross"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/AddDevMsgLayout"
        android:weightSum="15"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_weight="13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/addDevMessage"/>
        <ImageView
            android:id="@+id/updateDevMessage"
            android:layout_weight="2"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/send_image"/>

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startScreenRecyclerView"
        android:layout_margin="3dp">

    </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        />

    <LinearLayout

        android:id="@+id/tabbed_options"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="4"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:padding="8dp"
            android:src="@drawable/converter_filled"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </ImageView>
        <ImageView
            android:padding="8dp"
            android:src="@drawable/algaebw"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </ImageView>
        <ImageView
            android:padding="8dp"
            android:src="@drawable/table_bw"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </ImageView>
        <ImageView
            android:padding="8dp"
            android:src="@drawable/expense"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </ImageView>

    </LinearLayout>











</RelativeLayout>