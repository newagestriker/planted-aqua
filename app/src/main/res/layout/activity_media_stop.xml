<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient1"
    android:weightSum="7"
    android:id="@+id/AlarmWindowLayout"
    tools:context=".activities.MediaStopActivity">


<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <TextView
        android:layout_margin="3dp"
        android:background="@color/white"
        android:id="@+id/alarmtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="25sp"
        android:gravity="center"

        android:shadowColor="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:text="Time to dose your nutrient" />
</LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_margin="2dp"
        android:background="@drawable/ok_button_background"
        android:id="@+id/WaterPercentLayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_margin="1dp"
                android:background="@color/white"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_weight="1"
                android:text="Water Change %"/>
            <Button
                android:id="@+id/WaterPercentButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="50.00 %"


                />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/NewWaterChangePercentLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8">
            <EditText
                android:inputType="numberDecimal"
                android:id="@+id/AlarmWaterChangePercentInput"
                android:layout_margin="5dp"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter new water change %"
                android:gravity="center"
                />
            <Button
                android:id="@+id/WaterPercentEnteredButton"
                style="@style/Widget.AppCompat.Button.Colored"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="OK"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <TextView
        android:id="@+id/alarmdetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:textSize="30dp"
        android:gravity="center"
        android:shadowColor="@color/colorPrimary"
        android:textColor="@color/colorAccent"
        android:text="NO DOSAGE INFO!!!" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:gravity="center"
       >

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:id="@+id/Complete"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:textAlignment="center"
            android:shadowRadius="5"
            android:text="@string/Complete"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:id="@+id/Skip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:textAlignment="center"
            android:shadowRadius="5"
            android:text="@string/Skip"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>