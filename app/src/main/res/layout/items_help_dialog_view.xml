<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:padding="5dp"
        android:text="Help"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="8">

        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/addpic"
            />

   <TextView
       android:layout_weight="7"
       android:textSize="16sp"
       android:textColor="@color/colorPrimaryDark"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:padding="5dp"
       android:text="Press this icon on Menu Bar to ADD new ITEMS."/>

    </LinearLayout>

    <TextView

        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Press on any created ITEM to ACCESS additional options."/>



    <TextView

        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Long Press on any created ITEM to EDIT the item details."/>



    <TextView
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="SWIPE right or left any ITEM to remove it."/>
    <Button
        android:id="@+id/help_ok_button"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ok_button_background"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:text="OK"/>
</LinearLayout>