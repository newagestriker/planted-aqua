<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ConverterActivity"
    android:background="@drawable/gradient2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark">
        </View>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Tank Volume"
            android:padding="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <View
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="5">
            <EditText
                android:id="@+id/TankLengthInput"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:hint="length"
                android:gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:padding="2dp"/>
            <EditText
                android:id="@+id/TankWidthInput"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:hint="width"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:padding="2dp"/>
            <EditText
                android:id="@+id/TankHeightInput"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:hint="height"
                android:gravity="center"/>
            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/TankVolumeFromSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:onClick="convert"
                android:text="="
                android:tag="TankVolume"
                android:height="5dp"
                android:width="2dp"/>

            <TextView
                android:id="@+id/TankVolumeConvertedOutput"
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/fillbox"
                />

        <Spinner
            android:id="@+id/TankVolumeToSpinner"
            android:layout_weight="1"
            style="@android:style/Widget.Holo.Light.Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"/>



        </LinearLayout>


        <View
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark">
        </View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="Volume"
        android:padding="3dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"/>
        <View
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:weightSum="5">
        <EditText
            android:id="@+id/VolumeInput"
            android:hint="value"
            android:textSize="15sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:inputType="numberDecimal"
            android:gravity="center"/>
        <Spinner
            style="@android:style/Widget.Holo.Light.Spinner"
            android:id="@+id/VolumeFromSpinner"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />
        <TextView
            android:layout_weight="0.25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="To"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"/>

        <Spinner
            style="@android:style/Widget.Holo.Light.Spinner"
            android:id="@+id/VolumeToSpinner"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:onClick="convert"
            android:text="="
            android:tag="Volume"
            android:height="5dp"
            android:width="2dp"/>
        <TextView
            android:id="@+id/VolumeConvertedOutput"
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/fillbox"
            />


    </LinearLayout>
        <View
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Weight"
            android:padding="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <View
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="5">
            <EditText
                android:hint="value"
                android:id="@+id/WeightInput"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:gravity="center"/>
            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/WeightFromSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />
            <TextView
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"

                android:text="To"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"/>

            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/WeightToSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:onClick="convert"
                android:text="="
                android:tag="Weight"
                android:height="5dp"
                android:width="2dp"/>
            <TextView
                android:id="@+id/WeightConvertedOutput"
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/fillbox"
                />


        </LinearLayout>

        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="PPM"
            android:padding="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <View
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="5">
            <EditText
                android:id="@+id/WeightPPMInput"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:hint="weight"
                android:gravity="center"/>
            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/WeightSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/VolumePPMInput"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:hint="volume"
                android:gravity="center"/>

            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/VolumeSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:onClick="convert"
                android:tag="PPM"
                android:text="="
                android:height="5dp"
                android:width="2dp"/>
            <TextView
                android:id="@+id/PPMOutput"
                android:layout_weight="0.75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/fillbox"
                />


        </LinearLayout>
        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark">
        </View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Temperature"
            android:padding="3dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>
        <View
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            android:weightSum="5">
            <EditText
                android:hint="value"
                android:id="@+id/TempFromInput"
                android:textSize="12sp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:inputType="numberDecimal"
                android:gravity="center"/>
            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/TempFromSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                />
            <TextView
                android:layout_weight="0.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="To"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="center"/>

            <Spinner
                style="@android:style/Widget.Holo.Light.Spinner"
                android:id="@+id/TempToSpinner"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"/>

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:onClick="convert"
                android:text="="
                android:tag="Temp"
                android:height="5dp"
                android:width="2dp"/>
            <TextView
                android:id="@+id/ConvertedTempOutput"
                android:layout_weight="1.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/fillbox"
                />


        </LinearLayout>
        <View
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark">
        </View>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
            <TextView
                android:background="@drawable/converter_buttons"
                android:id="@+id/MixRO"
                android:clickable="true"
                android:textSize="25sp"
                android:focusable="true"
                android:gravity="center"
                android:onClick="mixRO"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Optimize GH with RO water"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:padding="5dp"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</ScrollView>

