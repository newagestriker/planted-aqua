<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TableRow
        android:weightSum="4"
        android:background="@color/grey_400"
        >
        <TextView
            android:layout_margin="1dp"
            android:background="@color/grey_200"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Light Type"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:padding="3dp">

        </TextView>
        <TextView
            android:layout_margin="1dp"
            android:background="@color/grey_200"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Lumens Per Watt"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:padding="3dp">

        </TextView>
        <TextView
            android:layout_margin="1dp"
            android:background="@color/grey_200"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Count"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:padding="3dp">

        </TextView>

        <TextView
            android:layout_margin="1dp"
            android:background="@color/grey_200"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:text="Watt per Count"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:padding="3dp">

        </TextView>


    </TableRow>

    <TableRow
        android:weightSum="4"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <Spinner
            style="@android:style/Widget.Holo.Light.Spinner"
            android:id="@+id/LightTypeSpinner"
            android:layout_margin="1dp"

            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp">

        </Spinner>

        <EditText
            android:hint="1"
            android:id="@+id/LumensPerWattLight"
            android:background="@drawable/ok_button_background"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp">

        </EditText>
        <EditText
            android:hint="1"
            android:id="@+id/LightCount"
            android:background="@drawable/ok_button_background"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp">

        </EditText>
        <EditText
            android:hint="1"
            android:inputType="numberDecimal"
            android:id="@+id/WattPerCount"
            android:background="@drawable/ok_button_background"
            android:layout_margin="1dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp">

        </EditText>


    </TableRow>
    </TableLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/OtherLightCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Light Name"/>
        <EditText
            android:textSize="18sp"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:id="@+id/LightName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. CREE LED, Metal Halide,etc "/>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>